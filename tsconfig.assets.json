{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src/shared",
    "outDir": "dist/assets",
    "declaration": false
  },
  "tsc-alias": {
    "replacers": {
      "appendPrivate": {
        "enabled": true,
        "file": "./scripts/shared-to-asset.replacer.cjs",
      },
    }
  }
}
