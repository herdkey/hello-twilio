{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": false,
  },
  "tsc-alias": {
    "replacers": {
      "requireAsset": {
        "enabled": true,
        "file": "./scripts/shared-to-asset.replacer.cjs",
      }
    }
  }
}
